@model Facilit.Models.Usuario

@if (!String.IsNullOrEmpty(TempData["Mensagem"] as string))
    {
        <div id="mensagem">
            <div class="alert alert-danger">
                @TempData["Mensagem"]
            </div>
        </div>
    }

    @if (!String.IsNullOrEmpty(TempData["Sucesso"] as string))
        {
            <div id="mensagem2">
                <div class="alert alert-success">
                    @TempData["Sucesso"]
                </div>
            </div>
        }

        <script src="~/Scripts/Mensagem.js"></script>


    @{
            ViewBag.Title = "Nova Senha";
    }

    @using (Html.BeginForm("AtualizarSenha", "Usuario", FormMethod.Post))
    {
        <h2 style="text-align:center">Nova Senha</h2>

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "E-mail:", htmlAttributes: new { @class = "fonte_leve" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email,  new { htmlAttributes = new { @class = "campo", placeholder = "falano@gmail.com" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Senha_Usuario, "Nova Senha:",htmlAttributes: new { @class = "fonte_leve" })
            <div class="col-10">
                @Html.PasswordFor(model => model.Senha_Usuario, new { @class = "campo", placeholder = "Sua senha" })
                @Html.ValidationMessageFor(model => model.Senha_Usuario, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Confirmar_Senha,"Confirmar Senha:", htmlAttributes: new { @class = "fonte_leve" })
            <div class="col-10">
                @Html.PasswordFor(model => model.Confirmar_Senha, new { @class = "campo", placeholder = " Confirmar Sua senha" })
                @Html.ValidationMessageFor(model => model.Confirmar_Senha, "", new { @class = "text-danger" })
            </div>
        </div>
         
        <br />
      
        <div>
            <input type="submit" value="Mudar senhar" class="btn btn-dark" />
            @Html.ActionLink("Voltar ao login", "Index", "Usuario", null, new { @class = "btn btn-secondary" })
        </div>
    }

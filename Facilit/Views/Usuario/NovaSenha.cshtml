@model Facilit.Models.Usuario

@if (!String.IsNullOrEmpty(TempData["Mensagem"] as string))
    {
        <div id="mensagem">
            <div class="alert alert-danger">
                @TempData["Mensagem"]
            </div>
        </div>
    }

    @if (!String.IsNullOrEmpty(TempData["Sucesso"] as string))
        {
            <div id="mensagem2">
                <div class="alert alert-success">
                    @TempData["Sucesso"]
                </div>
            </div>
        }

        <script src="~/Scripts/Mensagem.js"></script>


    @{
            ViewBag.Title = "Nova Senha";
    }

    @using (Html.BeginForm("AtualizarSenha", "Usuario", FormMethod.Post))
    {
        <h2 style="text-align:center">Nova Senha</h2>

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, "E-mail:", new { htmlAttributes = new { @class = "form-control", placeholder = "falano@gmail.com" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Senha_Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-10">
                @Html.PasswordFor(model => model.Senha_Usuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Nova senha" } })
                @Html.ValidationMessageFor(model => model.Senha_Usuario, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Confirmar_Senha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-10">
                @Html.PasswordFor(model => model.Confirmar_Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Confimar Senha" } })
                @Html.ValidationMessageFor(model => model.Confirmar_Senha, "", new { @class = "text-danger" })
            </div>
        </div>
         
        <br />
      
        <div>
            <input type="submit" value="Mudar senhar" class="btn btn-dark" />
            @Html.ActionLink("Voltar ao login", "Index", "Usuario", null, new { @class = "btn btn-secondary" })
        </div>
    }

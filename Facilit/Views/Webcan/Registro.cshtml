@{
    ViewBag.Title = "Registro";
}

@if (!String.IsNullOrEmpty(TempData["Mensagem"] as string))
{
    <div id="mensagem" class="alert alert-danger">
        @TempData["Mensagem"]
    </div>
}

<script>
    setTimeout(function () {
        var caixa_mensagem = document.getElementById('mensagem');
        if (caixa_mensagem) {
            caixa_mensagem.style.display = 'none';
        }
    }, 2000);
</script>

<style>
    .teste {
        display: none;
    }

    .titulo { /* titulo*/

        display: flex;
        margin-left: 170px;
        padding-bottom: 20px
    }

    .center-text {
        text-align: center;
    }

    .center-content {
        display: flex;
        justify-content: center;
    }

    .center-webcam {
        display: block;
        margin: 0 auto;
        padding-bottom: 20px; /* Ajuste conforme necessário */
    }

    .center-left {
        display: block;
        margin: 0 auto;
        position: relative;
        left: -100px; /* Ajuste o valor conforme necessário */
        padding-bottom: 20px;
    }


</style>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group bg-primary">
                <a href="https://erp.tiny.com.br/separacao" class="list-group-item list-group-item-action list-group-item-info" target="_blank">Imprimir etiquetas</a>
                <button id="btn_salvar" class="list-group-item list-group-item-action list-group-item-success">Tirar e salvar foto</button>
                <a href="https://drive.google.com/drive/my-drive?hl=pt-br" class="list-group-item list-group-item-action list-group-item-warning" target="_blank">Acessar Google Drive</a>
                @Html.ActionLink("Gerar PDF", "Gerador_pdf", "Webcan", null, new { @class = "list-group-item list-group-item-action list-group-item-secondary" })
                @Html.ActionLink("Obter nota específica", "Notas", "Notas_tiny", null, new { @class = "list-group-item list-group-item-action list-group-item-secondary", id = "notaLink" })
                @*@Html.ActionLink("Obter etiqueta específica", "ObterEtiquitas", "Etiquetas", null, new { @class = "list-group-item list-group-item-action list-group-item-secondary", id = "etiquetaLink" })*@

                <script>
                    document.getElementById("notaLink").setAttribute("target", "_blank");
                    document.getElementById("etiquetaLink").setAttribute("target", "_blank");
                </script>

            </div>

        </div>
        <div class="col-md-8">
            <h1 class="titulo">Tire sua fotografia</h1>

            <div class="row">
                <div class="col-md-6">
                    <h6>Produtos</h6>
                    <input type="text" id="searchProdutos" class="form-control" placeholder="Pesquisar produtos...">
                    @Html.DropDownList("Produtos", ViewBag.listaProdutos as SelectList, "-- Selecione aqui o Produto", htmlAttributes: new { @class = "form-control teste", @id = "drop_produtos" })
                </div>
                <div class="col-md-6">
                    <h6>Clientes</h6>
                    <input type="text" id="searchClientes" class="form-control" placeholder="Pesquisar clientes...">
                    @Html.DropDownList("Clientes", ViewBag.listarClientes as SelectList, "-- Selecione aqui o Cliente", htmlAttributes: new { @class = "form-control teste", @id = "drop_clientes" })
                </div>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-md-10">
                    @*aumentei a câmera*@
                    <video class="img-fluid center-left" autoplay></video>
                </div>
            </div>
            <div class="row justify-content-center mt-2">
                <div class="col-md-6">
                    <canvas class="img-fluid"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/webcan.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchProdutos').on('keyup', function () {
                var searchText = $(this).val().toLowerCase();
                $('#drop_produtos option').each(function () {
                    if ($(this).text().toLowerCase().indexOf(searchText) === -1) {
                        $(this).hide();
                    } else {
                        $(this).show();
                        $('#drop_produtos').addClass('teste').css('display', 'block');
                    }
                });
            });

            $('#searchClientes').on('keyup', function () {
                var searchText = $(this).val().toLowerCase();
                $('#drop_clientes option').each(function () {
                    if ($(this).text().toLowerCase().indexOf(searchText) === -1) {
                        $(this).hide();
                    } else {
                        $(this).show();
                        $('#drop_clientes').addClass('teste').css('display', 'block');
                    }
                });
            });
        });
    </script>
}
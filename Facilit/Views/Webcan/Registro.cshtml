@model Facilit.Models.Usuario
@{ 
    ViewBag.Title = "Registro";


}
@Html.ActionLink("Ver Perfis de usuário", "Perfis_usuario", "Usuario", null, new { @class = "btn btn-primary" })
<hr />

<h1 class="text-center">TIRE SUA FOTOGRÁFIA</h1>
<hr />
<html>
<body>

    <div class="form-group row">
        <div class="col-md-6">
            <h6>Produtos</h6>
            @Html.DropDownList("Produtos", ViewBag.Produtos as SelectList,"-- Selecione aqui o Produto", htmlAttributes: new { @class = "form-control" ,@id = "drop_produtos"})
        </div>
        <div class="col-md-6">
            <h6>Clientes</h6>

            @Html.DropDownList("Clientes", ViewBag.Clientes as SelectList, "-- Selecione aqui o Cliente" , htmlAttributes: new { @class = "form-control" ,@id = "drop_clientes"})
        </div>
    </div>
     <br />

    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <video class="img-fluid" autoplay></video>
            </div>
        </div>
        <div class="row justify-content-center" style="width: 500px">
            <div class="col-md-6">
                <canvas class="img-fluid"></canvas>
            </div>
        </div>
    </div>
    <button id="btn_salvar" class="btn btn-outline-success">Tirar e salvar foto</button>
    <script src="~/Scripts/webcan.js"></script>

</body>

</html>

@model Facilit.Models.NF_Tiny

@{
    ViewBag.Title = "Pesquisar notas";
}

@if (!String.IsNullOrEmpty(TempData["Mensagem"] as string))
{
    <div id="mensagem">
        <div class="alert alert-danger">
            @TempData["Mensagem"]
        </div>
    </div>
}
<script src="~/Scripts/Mensagem.js"></script>
<h2 class="fonte_leve">Pesquisar notas</h2>

@using (Html.BeginForm("ObterNotas", "Notas_tiny", FormMethod.Get, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5 class="fonte_leve">Preencha o campo</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.numero, "Número da nota fiscal:", htmlAttributes: new { @class = "fonte_leve" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @class = "campo" } })
                @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Obter nota</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

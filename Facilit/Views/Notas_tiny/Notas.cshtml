@model Facilit.Models.NF_Tiny

@{
    ViewBag.Title = "Pesquisar notas";
}

<h2>Pesquisar notas</h2>


@using (Html.BeginForm("ObterNotas", "Notas_tiny"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     <h5>Preencha o campo</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.numero,"Número da nota fiscal:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @class = "campo" } })
                @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Obter nota" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

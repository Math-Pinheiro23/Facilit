@model Facilit.Models.EtiquetasTiny

@{
    ViewBag.Title = "Obter Etiquetas";
}

<div class="row">
    <div class="col-md-8">
        <h2>Obter Etiquetas</h2>

        @using (Html.BeginForm("ObterLinkEtiquita", "Etiquetas"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>EtiquetasTiny</h4>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.id_expedicao, "Informe o ID da expedição:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.id_expedicao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.id_expedicao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Criar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    <p>
        @Html.ActionLink("VOLTAR", "Registro", "Webcan", null, new { @class = "btn btn-secondary" })
    </p>
    </div>

    <div class="col-md-4">
        <h2>Exemplo de Etiqueta</h2>
        <img src="~/Content/Images/barcode_example.png" alt="Exemplo de Etiqueta de Código de Barras" class="img-responsive" />
    </div>
</div>
